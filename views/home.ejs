    <body>
        <div class="new">
            <h3 class="section-title section-title-normal"><b></b><span class="section-title-main" style="font-size:170%;color:rgb(25, 38, 148);">New Arrival</span><b></b></h3>
            <div class="container">
                <div class="newarrival">
                    <div class="row">
                        <% for(var i = 0; i < products.length; i++) { %>
                            <div class="column">
                                <div class="products"><img style="width: 200px; height:150px;" src="<%= products[i].img %>"></div>
                                <form action="/api/cart" method="POST">
                                    <h2>
                                        <%= products[i].name %>
                                    </h2>
                                    <h2 style="color:red;">
                                        <%= products[i].price %> VND</h2>
                                    <input type="hidden" id="order" name="name" value="<%= products[i].name %>">
                                    <input type="hidden" id="order" name="price" value="<%= products[i].price %>">
                                    <h2><input type="number" id="order" placeholder="Nhập Số Lượng" name="quantity" required></h2>
                                    <h2><input type="submit" name="add" style="width: 150px;padding: 1px 2px; background-color: orange;" class="btn btn-success" value="Add to Cart"></h2>
                                </form>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
    </body>


