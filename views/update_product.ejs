
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/admin"><i class="fas fa-angle-double-left"></i> All Products</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update product</h2>
            <span class="text-light">Use the below form to Update an account</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_product">
    <div class="new_product">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="<%= product._id %>">
            <input type="text" name="name" value="<%= product.name %>" placeholder="">
        </div>

        <div class="form-group">
            <label for="type" class="text-light">Type</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="type" value="Boy" <%= product.type == 'Boy' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">Boy</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="type" value="Girl"  <%= product.type == 'Girl' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">Girl</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="type" value="Unisex"  <%= product.type == 'Unisex' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Unisex</label>
            </div>
            <div class="form-group">
                <label for="price" class="text-light">Price</label>
                <input type="text" name="price" value="<%= product.price %>" placeholder="">
            </div>
            <div class="form-group">
                <label for="img" class="text-light">Image URL</label>
                <input type="text" name="img" value="<%= product.img %>" placeholder="">
            </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
